@model ZagrosRealState.ViewModels.Views.CreateShopViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "ثبت اطلاعات مغازه";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="container-fluid">

    <!-- start page title -->
    <div class="row">
        <div class="col-12">
            <div class="page-title-box">
                <div class="page-title-right">
                </div>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="javascript: void(0);">داشبرد مدیریت سامانه املاک زاگرس</a></li>
                    <li class="breadcrumb-item"><a href="javascript: void(0);">ثبت اطلاعات</a></li>
                    <li class="breadcrumb-item active">ثبت اطلاعات مغازه</li>
                </ol>
            </div>
            @*<h4 class="page-title">ثبت اطلاعات مغازه</h4>*@
        </div>
    </div>
    <!-- end page title -->

    <div class="row">
        <div class="col-lg-12">
            <div class="card-box">
                <!-- Left sidebar -->
                <div class="inbox-leftbar">
                    <form action="#" method="post" class="dropzone" id="myAwesomeDropzone">
                        <div class="fallback">
                            <input name="file" type="file" />
                        </div>
                        <div class="dz-message needsclick">
                            <span class="text-muted font-11">( تصاویر مربوط به مغازه را بارگزاری نمایید. )</span>
                            <br />
                            <span class="text-muted font-11">---</span>
                            <br />
                            <span class="text-muted font-11">( پسوند تصاویر : jpeg , png )</span>
                            <br />
                            <span class="text-muted font-11">---</span>
                            <br />
                            <span class="text-muted font-11">( حداکثر حجم : 150 کیلوبایت )</span>
                            <br />
                            <br />
                            <i class="h1 text-muted dripicons-cloud-upload"></i>
                        </div>
                    </form>
                </div>
                <!-- End Left sidebar -->

                <form asp-action="Create">
                    <div class="inbox-rightbar">
                        <h4 class="header-title">مشخصات مغازه</h4>
                        <br />
                        <br />
                        <div class="alert alert-primary alert-dismissible fade show" role="alert">
                            <h4 class="alert-heading">کاربرگرامی</h4>
                            <p>جهت تکمیل اطلاعات مربوط به مغازه، تکمیل موارد زیر الزامی هستند :</p>
                            <hr>
                            <strong>* موجر ، </strong>
                            <strong>موبایل ، </strong>
                            <strong>متراژ ، </strong>
                            <strong>بالاکن ، </strong>
                            <strong>پوشش مغازه ، </strong>
                            <strong>مبلغ رهن ، </strong>
                            <strong>مبلغ اجاره ، </strong>
                            <strong>نوع صنف ، </strong>
                            <strong>آدرس و </strong>
                            <strong>وضعیت پایان کار .</strong>
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-3">
                                <label for="input" class="col-form-label" asp-for="ShopCode_Id">کد ملک</label>
                                <input type="text" class="form-control" asp-for="ShopCode_Id" id="input_CodeMelk" placeholder="کد ملک">
                                <span asp-validation-for="ShopCode_Id" class="text-danger field-validation-error"></span>
                            </div>
                            <div class="form-group col-md-3">
                                <label for="input" class="col-form-label" asp-for="Shop_Mougheyat">موقعیت</label>
                                <select asp-for="Shop_Mougheyat" asp-items="ViewBag.Shop_LST_Locations" class="selectpicker" data-style="btn-light" data-toggle="dropdown">
                                    <option value=""></option>
                                </select>
                                <span asp-validation-for="Shop_Mougheyat" class="text-danger field-validation-error"></span>
                            </div>
                            <div class="form-group col-md-3">
                                <label for="input" class="col-form-label" asp-for="Shop_Metrazh">متراژ</label>
                                <input type="text" class="form-control" asp-for="Shop_Metrazh" id="input_Metrazh" placeholder="مترمربع">
                                <span asp-validation-for="Shop_Metrazh" class="text-danger field-validation-error"></span>
                            </div>
                            <div class="form-group col-md-3">
                                <label for="input" class="col-form-label" asp-for="Shop_TypeDarb">نوع درب</label>
                                <select asp-for="Shop_TypeDarb" asp-items="ViewBag.Shop_LST_Darbs" class="selectpicker" data-style="btn-light" data-toggle="dropdown">
                                    <option value=""></option>
                                </select>
                                <span asp-validation-for="Shop_TypeDarb" class="text-danger field-validation-error"></span>
                            </div>
                            <div class="form-group col-md-3">
                                <label for="input" class="col-form-label" asp-for="Shop_StatusEjareh">وضعیت اجاره</label>
                                <select asp-for="Shop_StatusEjareh" asp-items="ViewBag.Shop_LST_Ejarehs" class="selectpicker" data-style="btn-light" data-toggle="dropdown">
                                    <option value=""></option>
                                </select>
                                <span asp-validation-for="Shop_StatusEjareh" class="text-danger field-validation-error"></span>
                            </div>
                            <div class="form-group col-md-3">
                                <label for="input" class="col-form-label" asp-for="Shop_Balakon">بالاکن</label>
                                <select asp-for="Shop_Balakon" asp-items="ViewBag.Shop_LST_Balakons" class="selectpicker" data-style="btn-light" data-toggle="dropdown">
                                    <option value=""></option>
                                </select>
                                <span asp-validation-for="Shop_Balakon" class="text-danger field-validation-error"></span>
                            </div>
                            <div class="form-group col-md-3">
                                <label for="input" class="col-form-label" asp-for="Shop_BalakonMetrazh">متراژ بالاکن</label>
                                <input type="text" class="form-control" asp-for="Shop_BalakonMetrazh" id="input_Metrazh" placeholder="متراژ بالاکن">
                                <span asp-validation-for="Shop_BalakonMetrazh" class="text-danger field-validation-error"></span>
                            </div>
                            <div class="form-group col-md-3">
                                <label for="input" class="col-form-label" asp-for="Shop_BeARZ">به عرض</label>
                                <input type="text" class="form-control" asp-for="Shop_BeARZ" id="input_Metrazh" placeholder="به عرض">
                                <span asp-validation-for="Shop_BeARZ" class="text-danger field-validation-error"></span>
                            </div>
                            <div class="form-group col-md-3">
                                <label for="input" class="col-form-label" asp-for="Shop_InsidePooshesh">پوشش داخلی</label>
                                <select asp-for="Shop_InsidePooshesh" asp-items="ViewBag.Shop_LST_InsideDesigns" class="selectpicker" data-style="btn-light" data-toggle="dropdown">
                                    <option value=""></option>
                                </select>
                                <span asp-validation-for="Shop_InsidePooshesh" class="text-danger field-validation-error"></span>
                            </div>
                            <div class="form-group col-md-3">
                                <label for="input" class="col-form-label" asp-for="Shop_AB">آب</label>
                                <select asp-for="Shop_AB" asp-items="ViewBag.Shop_LST_ABs" class="selectpicker" data-style="btn-light" data-toggle="dropdown">
                                    <option value=""></option>
                                </select>
                                <span asp-validation-for="Shop_AB" class="text-danger field-validation-error"></span>
                            </div>
                            <div class="form-group col-md-3">
                                <label for="input" class="col-form-label" asp-for="Shop_Gaz">گاز</label>
                                <select asp-for="Shop_Gaz" asp-items="ViewBag.Shop_LST_Gazs" class="selectpicker" data-style="btn-light" data-toggle="dropdown">
                                    <option value=""></option>
                                </select>
                                <span asp-validation-for="Shop_Gaz" class="text-danger field-validation-error"></span>
                            </div>
                            <div class="form-group col-md-3">
                                <label for="input" class="col-form-label" asp-for="Shop_Bargh">برق</label>
                                <select asp-for="Shop_Bargh" asp-items="ViewBag.Shop_LST_Barghs" class="selectpicker" data-style="btn-light" data-toggle="dropdown">
                                    <option value=""></option>
                                </select>
                                <span asp-validation-for="Shop_Bargh" class="text-danger field-validation-error"></span>
                            </div>
                            <div class="form-group col-md-3">
                                <label for="input" class="col-form-label" asp-for="Shop_Tell">تلفن</label>
                                <select asp-for="Shop_Tell" asp-items="ViewBag.Shop_LST_Tells" class="selectpicker" data-style="btn-light" data-toggle="dropdown">
                                    <option value=""></option>
                                </select>
                                <span asp-validation-for="Shop_Tell" class="text-danger field-validation-error"></span>
                            </div>
                            <div class="form-group col-md-3">
                                <label for="input" class="col-form-label" asp-for="Shop_HagheCharge">حق شارژ</label>
                                <select asp-for="Shop_HagheCharge" asp-items="ViewBag.Shop_LST_HagheCharges" class="selectpicker" data-style="btn-light" data-toggle="dropdown">
                                    <option value=""></option>
                                </select>
                                <span asp-validation-for="Shop_HagheCharge" class="text-danger field-validation-error"></span>
                            </div>
                            <div class="form-group col-md-3">
                                <label for="input" class="col-form-label" asp-for="Shop_PriceCharge">مبلغ حق شارژ</label>
                                <input type="text" class="form-control" asp-for="Shop_PriceCharge" id="input_Metrazh" placeholder="ریال">
                                <span asp-validation-for="Shop_PriceCharge" class="text-danger field-validation-error"></span>
                            </div>
                            <div class="form-group col-md-3">
                                <label for="input" class="col-form-label" asp-for="Shop_PriceRahn">مبلغ رهن</label>
                                <input type="text" class="form-control" asp-for="Shop_PriceRahn" id="input_Metrazh" placeholder="ریال">
                                <span asp-validation-for="Shop_PriceRahn" class="text-danger field-validation-error"></span>
                            </div>
                            <div class="form-group col-md-3">
                                <label for="input" class="col-form-label" asp-for="Shop_PriceEjareh">مبلغ اجاره</label>
                                <input type="text" class="form-control" asp-for="Shop_PriceEjareh" id="input_Metrazh" placeholder="ریال">
                                <span asp-validation-for="Shop_PriceEjareh" class="text-danger field-validation-error"></span>
                            </div>
                            <div class="form-group col-md-3">
                                <label for="input" class="col-form-label" asp-for="Shop_Address">آدرس</label>
                                <input type="text" class="form-control" asp-for="Shop_Address" id="input_Metrazh" placeholder="آدرس">
                                <span asp-validation-for="Shop_Address" class="text-danger field-validation-error"></span>
                            </div>
                            <div class="form-group col-md-3">
                                <label for="input" class="col-form-label" asp-for="Shop_PayaneKar">پایان کار</label>
                                <select asp-for="Shop_PayaneKar" asp-items="ViewBag.Shop_LST_PayaneKars" class="selectpicker" data-style="btn-light" data-toggle="dropdown">
                                    <option value=""></option>
                                </select>
                                <span asp-validation-for="Shop_PayaneKar" class="text-danger field-validation-error"></span>
                            </div>
                            <div class="form-group col-md-3">
                                <label for="input" class="col-form-label" asp-for="Shop_TypeSenf">مناسب جهت صنف</label>
                                <select asp-for="Shop_TypeSenf" asp-items="ViewBag.Shop_LST_Senfs" class="selectpicker" data-style="btn-light" data-toggle="dropdown">
                                    <option value=""></option>
                                </select>
                                <span asp-validation-for="Shop_TypeSenf" class="text-danger field-validation-error"></span>
                            </div>
                            <div class="form-group col-md-6">
                                <label for="input" class="col-form-label" asp-for="Shop_Family">نام و نام خانوادگی</label>
                                <input type="text" class="form-control" asp-for="Shop_Family" id="input_CodeMelk" placeholder="نام و نام خانوادگی">
                                <span asp-validation-for="Shop_Family" class="text-danger field-validation-error"></span>
                            </div>
                            <div class="form-group col-md-3">
                                <label for="input" class="col-form-label" asp-for="Shop_Mobile">شماره تماس</label>
                                <input type="text" class="form-control" asp-for="Shop_Mobile" id="input_CodeMelk" placeholder="شماره تماس">
                                <span asp-validation-for="Shop_Mobile" class="text-danger field-validation-error"></span>
                            </div>
                            <div class="form-group col-md-3">
                                <label for="input" class="col-form-label" asp-for="Shop_Comment">توضیحات</label>
                                <input type="text" class="form-control" asp-for="Shop_Comment" id="input_CodeMelk" placeholder="توضیحات">
                                <span asp-validation-for="Shop_Comment" class="text-danger field-validation-error"></span>
                            </div>
                            <div class="form-group col-md-3">
                                <label for="input" class="col-form-label" asp-for="Shop_Anbary">انباری</label>
                                <select asp-for="Shop_Anbary" asp-items="ViewBag.Shop_LST_Anbaries" class="selectpicker" data-style="btn-light" data-toggle="dropdown">
                                    <option value=""></option>
                                </select>
                                <span asp-validation-for="Shop_Anbary" class="text-danger field-validation-error"></span>
                            </div>
                            <div class="form-group col-md-3">
                                <label for="input" class="col-form-label" asp-for="Shop_Asansor">آسانسور</label>
                                <select asp-for="Shop_Asansor" asp-items="ViewBag.Shop_LST_Asansors" class="selectpicker" data-style="btn-light" data-toggle="dropdown">
                                    <option value=""></option>
                                </select>
                                <span asp-validation-for="Shop_Asansor" class="text-danger field-validation-error"></span>
                            </div>
                            <div class="form-group col-md-3">
                                <label for="input" class="col-form-label" asp-for="Shop_Shoofazh">شوفاژ</label>
                                <select asp-for="Shop_Shoofazh" asp-items="ViewBag.Shop_LST_Shoofazhs" class="selectpicker" data-style="btn-light" data-toggle="dropdown">
                                    <option value=""></option>
                                </select>
                                <span asp-validation-for="Shop_Shoofazh" class="text-danger field-validation-error"></span>
                            </div>
                            <div class="form-group col-md-3">
                                <label for="input" class="col-form-label" asp-for="Shop_Status_Rah_OR_Ejareh">وضعیت رهن یا اجاره</label>
                                <select asp-for="Shop_Status_Rah_OR_Ejareh" asp-items="ViewBag.Shop_LST_Rahn_OR_Ejarehs" class="selectpicker" data-style="btn-light" data-toggle="dropdown">
                                    <option value=""></option>
                                </select>
                                <span asp-validation-for="Shop_Status_Rah_OR_Ejareh" class="text-danger field-validation-error"></span>
                            </div>
                        </div>
                    </div>
                    <div class="text-right">
                        <button type="submit" class="btn btn-success waves-effect waves-light width-md">ثبت اطلاعات<i class="mdi mdi-content-save ml-2"></i></button>
                        <button type="button" class="btn btn-outline-danger waves-effect waves-light width-md">انصراف<i class="mdi mdi-close ml-2"></i></button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="clearfix"></div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


