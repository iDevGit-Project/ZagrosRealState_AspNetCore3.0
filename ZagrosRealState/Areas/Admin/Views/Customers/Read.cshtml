@model ReflectionIT.Mvc.Paging.PagingList<ZagrosRealState.ViewModels.Views.ViewDataCustomersModel>
@inject ZagrosRealState.Common.PublicClasses.ConvertDate convertDate
@using ReflectionIT.Mvc.Paging
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, ReflectionIT.Mvc.Paging
@{
    ViewData["Title"] = "نمایش اطلاعات مشتریان";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="row">
    <div class="col-12">
        <div class="page-title-box">
            <div class="page-title-right">
            </div>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="javascript: void(0);">داشبرد مدیریت سامانه املاک زاگرس</a></li>
                <li class="breadcrumb-item"><a href="javascript: void(0);">مدیریت دسته بندی ها</a></li>
                <li class="breadcrumb-item active"> اطلاعات مشتریان</li>
            </ol>
        </div>
    </div>
</div>
<div class="col-lg-12">
    <div class="card-box ribbon-box">
        <div class="ribbon ribbon-primary float-left">مدیریت اطلاعات مشتریان</div>
        <div class="dropdown float-right">
            <a href="#" class="dropdown-toggle arrow-none card-drop" data-toggle="dropdown" aria-expanded="false">
                <i class="mdi mdi-dots-horizontal"></i>
            </a>
            <div class="dropdown-menu dropdown-menu-right">
                <a href="javascript:window.print()" class="dropdown-item mdi mdi-printer mr-1"> دریافت گزارش </a>
                <a href="javascript:void(0);" i class="dropdown-item  mdi mdi-undo-variant"> بروزرسانی داده ها </a>
            </div>
        </div>
        <div class="ribbon-content">
            <div class="col-sm-auto">
                <div class="col-sm-auto">
                    <div class="row">
                        <div class="col-12">
                            <div class="card-box">
                                <h4 class="header-title">جستجوی داده ها</h4>
                                <p class="sub-header">
                                    جهت جستجوی اطلاعات مشتری از پارامتر های زیر استفاده کنید.
                                </p>

                                <div class="row">
                                    <div class="col-md-2">
                                        <form action="#">
                                            <div class="form-group">
                                                <label>نام </label>
                                                <input type="text" class="form-control" maxlength="50" placeholder="نام">
                                            </div>
                                        </form>
                                    </div>
                                    <div class="col-md-2">
                                        <form action="#">
                                            <div class="form-group">
                                                <label>نام خانوادگی</label>
                                                <input type="text" class="form-control" maxlength="50" placeholder="نام خانوادگی">
                                            </div>
                                        </form>
                                    </div> <!-- end col -->
                                    <div class="col-md-2">
                                        <form action="#">
                                            <div class="form-group">
                                                <label>شماره موبایل</label>
                                                <input type="text" class="form-control" maxlength="11" placeholder="شماره موبایل را وارد نمایید">
                                            </div>
                                        </form>
                                    </div> <!-- end col -->
                                    <div class="col-md-4">
                                        <form action="#">
                                            <div class="form-group">
                                                <label>آدرس</label>
                                                <input type="text" class="form-control" maxlength="512" placeholder="آدرس مشتری را وارد نمایید">
                                            </div>
                                        </form>
                                    </div> <!-- end col -->
                                    <div class="col-md-2">
                                        <form action="#">
                                            <div class="form-group">
                                                <label for="input">وضعیت شغل</label>
                                                <select asp-items="ViewBag.Customers_LST_JOBs" class="selectpicker" data-style="btn-light" data-toggle="dropdown">
                                                    <option value=""></option>
                                                </select>
                                            </div>
                                        </form>
                                    </div> <!-- end col -->
                                </div>
                                <!-- end row -->

                            </div> <!-- end card-box -->
                        </div> <!-- end col -->
                    </div> <!-- end row -->
                    <!-- START - Modal -->
                    @*<form asp-action="">*@
                    <div class="modal fade editCustomers" tabindex="-1" role="dialog"
                         aria-labelledby="myLargeModalLabel" aria-hidden="true" data-backdrop="static"
                         style="display: none;">
                        <div class="modal-dialog modal-lg">
                            <div class="modal-content">
                                <div class="modal-header bg-primary">
                                    <h4 class="modal-title" id="myLargeModalLabel">ویرایش اطلاعات مشتری</h4>
                                </div>
                                <div class="modal-body">
                                    <div class="form-row">
                                        <div class="form-group col-md-3">
                                            <label for="input" class="col-form-label">نام</label>
                                            <input type="text" class="form-control" id="input_CodeMelk" placeholder="مینا">
                                        </div>
                                        <div class="form-group col-md-3">
                                            <label for="input" class="col-form-label">نام خانوادگی</label>
                                            <input type="text" class="form-control" id="input_Metrazh" placeholder="عبودی">
                                        </div>
                                        <div class="form-group col-md-3">
                                            <label for="input" class="col-form-label">کد ملی</label>
                                            <input type="text" class="form-control" id="input_Tabagheh" placeholder="2300501245">
                                        </div>
                                        <div class="form-group col-md-3">
                                            <label for="input" class="col-form-label">شماره موبایل</label>
                                            <input type="text" class="form-control" id="input_Tabagheh" placeholder="09171023652">
                                        </div>
                                        <div class="form-group col-md-3">
                                            <label for="input" class="col-form-label">شغل</label>
                                            <select asp-items="ViewBag.Customers_LST_JOBs" class="selectpicker" data-style="btn-light" data-toggle="dropdown">
                                                <option value=""></option>
                                            </select>
                                        </div>
                                        <div class="form-group col-md-9">
                                            <label for="input" class="col-form-label">آدرس</label>
                                            <input type="text" class="form-control" id="input_Tabagheh" placeholder="شیراز - شهر صدرا - بلوار مولانا">
                                        </div>
                                    </div>
                                    <div class="text-right">
                                        <button type="button" class="btn btn-success waves-effect waves-light width-md" id="example-success">ویرایش نهایی اطلاعات<i class="mdi mdi-content-save ml-2"></i></button>
                                        <button type="button" data-dismiss="modal" class="btn btn-outline-danger waves-effect waves-light width-md">بازگشت<i class="mdi mdi-close ml-2"></i></button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="modal fade deleteCustomers" tabindex="-1" role="dialog"
                         aria-labelledby="myLargeModalLabel" aria-hidden="true" data-backdrop="static"
                         style="display: none;">
                        <div class="modal-dialog modal-sm">
                            <div class="modal-content">
                                <div class="modal-header bg-warning">
                                    <h4 class="modal-title" id="myLargeModalLabel">حذف اطلاعات مشتری</h4>
                                </div>
                                <div class="modal-body">
                                    <div class="form-row">
                                        شما قصد حذف اطلاعات مربوط به مشتری را دارید. آیا ادامه میدهید؟
                                        <hr />
                                    </div>
                                    <div class="text-right">
                                        <button type="submit" class="btn btn-outline-danger waves-effect waves-light width-md">حذف نهایی اطلاعات<i class="mdi mdi-content-save ml-2"></i></button>
                                        <button type="button" data-dismiss="modal" class="btn btn-outline-danger waves-effect waves-light width-md">بازگشت<i class="mdi mdi-close ml-2"></i></button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- END - Modal -->

                    @if (ViewBag.AddNewDataMessageCustomers != null)
                    {
                        <div class="alert alert-danger alert-dismissible">
                            @ViewBag.AddNewDataMessageCustomers
                        </div>
                    }

                    <table id="datatable" class="table table-striped table-bordered dt-responsive wrap">
                        <thead>
                            <tr>
                                <th>نام</th>
                                <th>نام خانودگی</th>
                                <th>کد ملی</th>
                                <th>شماره موبایل</th>
                                <th>شغل</th>
                                <th>آدرس</th>
                                <th>تاریخ ثبت</th>
                                <th>عملیات</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var CustomersItem in Model)
                            {
                                <tr>
                                    <td>@CustomersItem.Customers_Name</td>
                                    <td>@CustomersItem.Customers_Family</td>
                                    <td>@CustomersItem.Customers_CodeMelli</td>
                                    <td>@CustomersItem.Customers_Mobile</td>
                                    <td>@CustomersItem.Customers_Job</td>
                                    <td>@CustomersItem.Customers_Address</td>
                                    <td>@convertDate.ConvertMiladiToShamsi((DateTime)CustomersItem.Customers_DatePublish, "yyyy/MM/dd")</td>
                                    <td>
                                        <button type="submit" class="btn btn-sm btn-light waves-effect" data-toggle="modal" data-target=".editCustomers"><i class="mdi mdi-pencil font-18 vertical-middle"></i></button>
                                        <a href="#" data-toggle="modal" data-target=".deleteCustomers" button type="submit" class="btn btn-sm btn-light waves-effect"><i class="mdi mdi-delete font-18 vertical-middle"></i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <div class="row">

                        <nav>
                            @await this.Component.InvokeAsync("Pager", new { PagingList = this.Model })
                        </nav>

                    </div>
                    @*</form>*@
                </div> <!-- end col -->
            </div>
        </div>
    </div>

</div>

