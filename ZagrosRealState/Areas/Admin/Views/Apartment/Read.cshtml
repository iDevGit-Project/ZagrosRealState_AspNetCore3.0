<script>

    $("button[data-toggle='modal']").click(function () {
        var DetailsApartment = $("#Details_Apartment");
        var url = $(this).data('url');
        $.get(url).done(function (result) {
            DetailsApartment.html(result);
            DetailsApartment.find('.modal').modal('show');
        });
    });

</script>

