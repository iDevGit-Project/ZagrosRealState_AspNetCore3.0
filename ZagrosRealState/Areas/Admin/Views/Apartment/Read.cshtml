                    @*@if (ViewBag.AddNewDataMessageApartment != null)
                        {
                            <div class="alert alert-danger alert-dismissible">
                                @ViewBag.AddNewDataMessageApartment
                            </div>
                        }*@

                    <table id="datatable" class="table table-striped table-bordered dt-responsive wrap">
                        <thead>
                            <tr>
                                <th>کد</th>
                                <th>موجر</th>
                                <th>موبایل</th>
                                <th>متراژ</th>
                                <th>طبقه</th>
                                <th>تعداد خواب</th>
                                <th>وضعیت امکانات</th>
                                <th>رهن. ریال</th>
                                <th>اجاره. ریال</th>
                                <th>آدرس</th>
                                <th>وضعیت آپارتمان</th>
                                <th>وضعیت تصویر</th>
                                <th>تاریخ ثبت</th>
                                <th>عملیات</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var ApartmentItem in Model)
                            {
                                <tr>
                                    <td>@ApartmentItem.Apartment_CodeId</td>
                                    <td>@ApartmentItem.Apartment_MojerName</td>
                                    <td>@ApartmentItem.Apartment_MojerTell</td>
                                    <td>@ApartmentItem.Apartment_Metrazh</td>
                                    <td>@ApartmentItem.Apartment_Tabaghe</td>
                                    <td>@ApartmentItem.Apartment_NumKhab</td>
                                    <td>@ApartmentItem.Apartment_StatusEnshaaab</td>
                                    <td>@ApartmentItem.Apartment_PriceRahn</td>
                                    <td>@ApartmentItem.Apartment_PriceEjareh</td>
                                    <td>@ApartmentItem.Apartment_Address</td>
                                    <td>@ApartmentItem.Apartment_StatusRahnAparteman</td>
                                    <td><button type="submit" class="btn btn-sm btn-light waves-effect" data-toggle="modal" data-url="@Url.Action("Read","Apartment", values:new {id = ApartmentItem.Apartment_CodeId})"><i class="mdi mdi-eye font-15 vertical-middle"></i></button></td>
                                    <td>
                                        @convertDate.ConvertMiladiToShamsi((DateTime)ApartmentItem.Apartment_PublishDate, "yyyy/MM/dd")
                                    </td>
                                    <td>
                                        <button type="submit" class="btn btn-sm btn-light waves-effect" data-toggle="modal" data-target=".editAparteman"><i class="mdi mdi-pencil font-18 vertical-middle"></i></button>
                                        <a href="#" data-toggle="modal" data-target=".deleteAparteman" button type="submit" class="btn btn-sm btn-light waves-effect"><i class="mdi mdi-delete font-18 vertical-middle"></i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <div class="row">

                        <nav>
                            @await this.Component.InvokeAsync("Pager", new { PagingList = this.Model })
                        </nav>

                    </div>
                    @*</form>*@
